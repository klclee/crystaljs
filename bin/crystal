#!/usr/bin/env node

var exec = require('child_process').exec
  , program = require('commander')
  , pkg = require('../package.json')
  , version = pkg.version
  , os = require('os')
  , fs = require('fs')
	, sh = require('shelljs/global');
	
program
  .version(version)
  .option('--path <path to your project>', 'path of your expressjs project (defaults to your current directory)', String, '.')
	
program.command('clear').action(function(env){
	path = program.path
	if (path == '.'){
		console.log('creating express templates at ' + __dirname);
		cp('-R', '../lib/proj/*',__dirname)
	}else{
		console.log('creating express templates at ' + path);
		cp('-R', '../lib/proj/*',path)
	}
	
});

program.parse(process.argv);
