#!/usr/bin/env node

var red, blue, green, reset;
red   = '\u001b[31m';
blue  = '\u001b[34m';
green  = '\u001b[32m';
reset = '\u001b[0m';

var exec = require('child_process').exec
  , path = require('path')
  , program = require('commander')
  , pkg = require('../package.json')
  , version = pkg.version
  , os = require('os')
  , fs = require('fs')
	, sh = require('shelljs/global');
	
program
  .version(version)
	
program.command('clear').action(function(env){
	path = '.'
	if (path == '.'){
		console.log(green + 'creating express project at: ' + __dirname);
		cp('-R', '../lib/templates/', __dirname)
		console.log(reset + 'complete. To start your project execute' + green + ' npm install ' + reset + 'then' + green + ' cake dev')
	}
	
});

program.parse(process.argv);
